@model IEnumerable<Empleados.Models.Empleados>

@{
    ViewBag.Title = "Empleados";
}

<h2>Empleados</h2>

<p align="right">
    <input type="button" class="btn btn-primary" value="Nuevo" onclick="location.href='@Url.Action("Create")'" />
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.apPaterno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.apMaterno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FecNac)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.departamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sueldo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apPaterno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apMaterno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FecNac)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.departamento.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sueldo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Clave_Emp }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Clave_Emp }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Clave_Emp })
        </td>
    </tr>
}

</table>
